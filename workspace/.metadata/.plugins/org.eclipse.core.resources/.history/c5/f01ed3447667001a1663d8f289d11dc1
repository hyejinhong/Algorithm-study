package boj;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Arrays;

public class BOJ_2193 {

	static int n;
	static int[][] cache = new int[91][2];
	
	public static void main(String[] args) throws IOException {
		// TODO Auto-generated method stub
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		n = Integer.parseInt(br.readLine());
		
		for(int[] row : cache) {
			Arrays.fill(row, -1);
		}
		
		cache[1][0] = 1;		
		cache[1][1] = 1;
		cache[2][1] = 1;
		int result = count(n, 0) + count(n, 1);
		System.out.println(result);
	}
	
	// length자리 이친수의 개수를 반환, last는 이전 이친수의 마지막 자리 숫자
	public static int count(int length, int last) {
		// 기저
		if(length == 1) {
			return 1;
		}
		
		// 캐시가 있으면
		if(cache[length][last] != -1) {
			return cache[length][last];
		}
		
		// 캐시가 없으면
		int ret = 0;
		ret = count(length-1, 0) + count(length-1, 1)  + 1;
		cache[length][last] = ret;
		return ret;
	}

}
