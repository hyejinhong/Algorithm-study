package datastructure;

class TreeNode {
	
	String data;
	TreeNode left;
	TreeNode right;
	
	public TreeNode(String data) {
		this.data = data;
		this.left = null;
		this.right = null;
	}
	
	public void setLeftSubTree(TreeNode left) {
		if(this.left != null) {
			this.left = null;
		}
		this.left = left;
	}
	
	public void setRightSubTree(TreeNode right) {
		if(this.right != null) {
			this.right = null;
		}
		this.right = right;
	}
	
	public String getData() {
		return data;
	}
	
	public TreeNode getLeftSubTree() {
		return this.left;
	}
	
	public TreeNode getRightSubTree() {
		return this.right;
	}

	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		TreeNode t1 = new TreeNode("1");
		TreeNode t2 = new TreeNode("2");
		TreeNode t3 = new TreeNode("3");
		TreeNode t4 = new TreeNode("4");
		
		t1.setLeftSubTree(t2);
		t1.setRightSubTree(t3);
		t2.setLeftSubTree(t4);
	}

}
