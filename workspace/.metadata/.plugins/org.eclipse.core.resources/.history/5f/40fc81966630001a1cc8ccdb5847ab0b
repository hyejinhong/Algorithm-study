package project;

import java.util.*;

class Info {
	int weight;
	int height;
	int rank;
	
	public Info(int weight, int height) {
		this.weight = weight;
		this.height = height;
		this.rank = 0;
	}
}

public class BOJ_7568 {
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		
		Info[] people = new Info[n];
		boolean[] check = new boolean[n];
		
		for(int i=0; i<n; i++) {
			int weight = scan.nextInt();
			int height = scan.nextInt();
			people[i] = new Info(weight, height);
		}
		compare(people, check, 0);
		printResult(people);
	}
	
	public static void compare(Info[] people, boolean[] check, int index) {
		// 기저
		if(index == people.length-1) {
			return;
		}
		
		for(int i=index+1; i<people.length; i++) {
			if(!check[index]) {
				System.out.println(index+"번 vs "+(i)+"번");
				if(people[index].height > people[i].height && people[index].weight > people[i].weight) {
					System.out.println((i)+"번 ++");
					people[i].rank++;
				}
				else if(people[index].height < people[i].height && people[index].weight < people[i].weight) {
					System.out.println(index+"번 ++");
					people[index].rank++;
				}
				compare(people, check, index+1);
			}
		}
		check[index] = true;
		
//		for(int i=0; i<people.length-1; i++) {
//			if(people[i].height > people[i+1].height && people[i].weight > people[i+1].weight) {
//				people[i+1].rank++;
//			}
//			else if(people[i].height < people[i+1].height && people[i].weight < people[i+1].weight) {
//				people[i].rank++;
//			}
//			compare(people, i+1);
//		}
		
//		if(people[index].height > people[index+1].height && people[index].weight > people[index+1].weight) {
//			people[index+1].rank++;
//		}
//		else if(people[index].height < people[index+1].height && people[index].weight < people[index+1].weight) {
//			people[index].rank++;
//		}
//		compare(people, index+1);	
	}
		
	public static void printResult(Info[] people) {
		for(int i=0; i<people.length; i++) {
			// 나보다 큰 사람이 없음
			System.out.print((people[i].rank + 1) + " ");
		}
	}
}